{
  "name": "SearchDocument",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Document title"
    },
    "content": {
      "type": "string",
      "description": "Document text content"
    },
    "source": {
      "type": "string",
      "description": "Source of the document (e.g., collection name, file)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags/keywords associated with the document"
    },
    "category": {
      "type": "string",
      "enum": [
        "technical",
        "business",
        "legal",
        "research",
        "operations",
        "general"
      ],
      "description": "Document category"
    },
    "status": {
      "type": "string",
      "enum": [
        "indexed",
        "pending",
        "failed",
        "archived"
      ],
      "default": "pending",
      "description": "Indexing status"
    },
    "embedding_status": {
      "type": "string",
      "enum": [
        "generated",
        "pending",
        "failed"
      ],
      "default": "pending"
    },
    "relevance_score": {
      "type": "number",
      "description": "Average relevance score from user feedback"
    },
    "access_level": {
      "type": "string",
      "enum": [
        "public",
        "team",
        "restricted",
        "confidential"
      ],
      "default": "public"
    },
    "view_count": {
      "type": "number",
      "default": 0
    },
    "metadata": {
      "type": "string",
      "description": "JSON string of additional metadata"
    }
  },
  "required": [
    "title",
    "content"
  ]
}