{
  "name": "SearchPolicy",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Policy name"
    },
    "description": {
      "type": "string",
      "description": "What this policy does"
    },
    "rule_type": {
      "type": "string",
      "enum": [
        "boost",
        "penalize",
        "filter",
        "rerank",
        "suggest"
      ],
      "description": "Type of ranking rule"
    },
    "conditions": {
      "type": "string",
      "description": "JSON conditions for when policy applies"
    },
    "source": {
      "type": "string",
      "enum": [
        "auto_generated",
        "manual",
        "feedback_driven"
      ],
      "description": "How this policy was created"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "pending_approval",
        "rejected",
        "disabled"
      ],
      "default": "pending_approval"
    },
    "impact_score": {
      "type": "number",
      "description": "Estimated impact on search quality"
    },
    "approved_by": {
      "type": "string",
      "description": "Admin who approved the policy"
    },
    "times_applied": {
      "type": "number",
      "default": 0
    }
  },
  "required": [
    "name",
    "rule_type"
  ]
}